<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/character_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/character_profile_name_title"
            style="@style/ProfileTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/character_profile_image"
            android:text="@string/profile_name_title" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/character_profile_name_body"
            style="@style/ProfileBodyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/character_profile_name_title"
            android:layout_marginStart="8dp" />

    </RelativeLayout>

</ScrollView>