<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chesire.eorzeaninfo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".EorzeanInfoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LaunchActivity"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.CharacterProfileActivity"
            android:label="@string/title_activity_character_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.FirstLaunchActivity" />
        <activity
            android:name=".views.CharacterChangeActivity"
            android:label="@string/title_activity_character_select"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>